block content
  nav.navbar.navbar-default.navbar-fixed-top
    .container
      .navbar-header
        a.navbar-brand(href="#")
          img(alt="Aimless", src="/images/AimlessA.svg", width="100px")
        button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
      #navbar.navbar-collapse.collapse(aria-expanded='false', style='height: 1px;')
        ul.nav.navbar-nav
          li
            a(href='#') Login
          li
            a(href='#') Past Aimlessness
        ul.nav.navbar-nav.navbar-right
          li.active
            a(href='./')
              | Walk 
              span.sr-only (current)
          li
            a(href='#') Bike
          li
            a(href='#') Moped
  .topTron
    .container
      .row
        #logo.center-block
          img(src='../images/Aimless.svg', alt='Aimless', class="col-xs-12 logo", id="aimlessLogo")
  .bottomTron
    .container
      .row
        p.col-xs-12.readText Going for an aimless walk? Simply select the time you need to be back by and we'll let you know when and how to get back.
      
        // div.col-sm-12 Sign in to store your walks and see how much area you've explored!
        //   form(action="/auth/login", method="post")
        //     input(type="email", name="email", placeholder="email")
        //     input(type="password", name="password", placeholder="Password")
        //     input(class="btn btn-primary",type="submit")
      .row
        .col-xs-12
          input(type="time", id="timeToReturn", required)
      .row    
        .col-xs-12.btnDiv
            button.btn.btn-primary#newDestBtn
              label(for="newDest") 
                | Change Destination
                input(type='checkbox', id='newDest')
      .row.hiddenInput
        .col-xs-12
            input(type="text", placeholder="Your New Destination...", id="theirNewDest")
      .row#successAndDone 
        button(class='btn btn-success col-xs-12 theMainBtn', id="iAmWalking") I'm ready to get lost!
  .container
    .row#mapRow
      .col-xs-12
        #map-canvas
    .row
      #directionsPanel.col-xs-offset-2.col-xs-8
    .row
      #warnings_panel(style='width:100%;height:10%;text-align:center')
