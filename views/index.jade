extends layout

block content
  .container
    .row
      #logo.center-block
        img(src='../images/Aimless.svg', alt='Aimless', class="col-xs-12 logo")
  .container
    .row
      p.col-xs-12 Going for an Aimless Walk? Simply select the time you need to be back by and we'll let you know when and how to go back.
    
      // div.col-sm-12 Sign in to store your walks and see how much area you've explored!
